packages:
  yum:
    gcc: []  # Required for compiling dependencies
    libffi-devel: []  # Required for cryptography
    python3-devel: []  # Required for Python development

container_commands:
  01_upgrade_pip:
    command: "/var/app/staging/venv/bin/pip install --upgrade pip"
  02_install_dependencies:
    command: "/var/app/staging/venv/bin/pip install -r /var/app/staging/requirements.txt"
